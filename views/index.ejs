<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Home | Bloggzzz</title>
  <link rel="shortcut icon" type="image/x-icon" href="icons8-b-48.png">
  <%- include('partials/links')-%>
</head>

<%-include('partials/aaheader')  %> 

<br><br><br>
  <div class="div text-center"><h1>All Blogs</h1></div><br>
  <div class="container">
    <% for(var i=0;i<blogs.length;i++) { %>
      <div class="card my-4" style="width: 90%; margin-left:3% ; background-color:rgb(255, 255, 255) ;">
        <div class="card-body">
          <h3 class="card-title" style="text-transform:uppercase;">
            <%= blogs[i].name %>
          </h3>
          <h6 class="text-muted mt-4" style="font-weight: bold;">
            <%= blogs[i].descriptioninshort%>
          </h6>
          <h6 class="text-muted mt-4" style="font-weight: bold;">Category :
            <%= blogs[i].category%>
          </h6>
          <h6 class="text-muted mt-4 mb-0" style="font-weight: bold"><i class="fa-solid fa-user"></i>
            <%= blogs[i].writer%>
          </h6>
          <h6 class="text-muted mt-4 mb-0 " style="font-weight: bold"><i class="fa-solid fa-calendar"></i>
            <%= blogs[i].time;%>
          </h6>
        </div>
         <button class="bn15">
          <a href="readmore/<%=blogs[i]._id%>">Full Blog</a></button> 
      </div>
  <%};%>

  </div>
</body>
</html>


